<div class="show-label">
    <h1>User Information:</h1>
</div>

<div class="show">
<div class="show-text">
<label for="@user.name">Name:</label>
<h2><%= @user.name %></h2><br>
<label for="@user.email">Email:</label>
<h2><%= @user.email %></h2><br>
<label for="@user.username">Username:</label>
<h2><%= @user.username %></h2><br>



<br><br>
<form method="POST" action="/users/<%= @user.id %>">
    <input type="hidden" id="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
</form>

<br>
<br>
<a href="/users/<%= @user.id %>/edit"><button>Edit this User</button></a><br><br><br>
<a href="/customers"><button>List of All Customers</button></a><br><br><br>
<% if current_user.name == ENV.fetch("ADMIN")%>
    <a href="/users"><button>All Users</button></a><br><br>
    <a href="/users/new"><button>New Employee</button></a>
<% end %>
</div>
</div>

<div class="enquiry-label">
    <h1>Customer Messages:</h1>
</div>

<div class="enquiry">
<% @enquiry.each do |e|%>
    
    <table>
        <tr>
            <th>No.</th>
            <th>Enquiry:</th>
            <th>Assigned to Employee:</th>
            <th>First Name:</th>
            <th>Last Name:</th>
            <th>Email:</th>
            <th>Address:</th>
            <th>City:</th>
            <th>State:</th>
            <th>Zip:</th> 
        </tr>
        <tr>
        <td><a href="/enquiries/<%=e.id%>/edit"><%=e.id%></td>
        <td width= "200px"><%=e.enquiry%></td>
        <td><%=e.user_id%></td>
        <td><%=e.customer.first_name%></td>
        <td><%=e.customer.last_name%></td>
        <td><%=e.customer.email%></td>
        <td><%=e.customer.address%></td>
        <td><%=e.customer.city%></td>
        <td><%=e.customer.state%></td>
        <td><%=e.customer.zip%></td>
        </tr>
    </table>
<% end %>
</div>